<%- include('partials/header.ejs') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Post</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <input type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>">
        </div>
        <div class="field">
            <textarea name="blog[body]" rows="10" placeholder="Blog post body" required><%= blog.body %></textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
</div>

<%- include('partials/footer.ejs') %>