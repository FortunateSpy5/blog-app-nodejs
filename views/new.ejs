<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <input type="text" name="blog[title]" placeholder="Title" required>
        </div>
        <div class="field">
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <textarea name="blog[body]" rows="10" placeholder="Blog post body" required></textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
</div>

